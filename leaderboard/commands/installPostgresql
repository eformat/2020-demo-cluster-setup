#!/usr/bin/env bash

installPostgresql::run() {
 header_text "Deploying PostgeSQL"
 oc import-image openshift-pgsql12-primary \
   --from=quay.io/redhatdemo/openshift-pgsql12-primary \
   --confirm
 POSTGRESQL_PARAMS="PG_NETWORK_MASK=all"  
 oc process -f "$(configdir)/openshift-pgsql12-template.json" $POSTGRESQL_PARAMS | oc apply -n"$(project)" -f -
 
 sleep 5; while echo && oc get pods -n "$(project)" --selector=deploymentconfig=postgresql \
   | grep -v -E "(Running|Completed|STATUS)"; do sleep 5; done
}

installPostgresql::usage(){
  echo "No parameters"
}

installPostgresql::clean(){
  header_text "UnDeploying PostgeSQL"
 POSTGRESQL_PARAMS="PG_NETWORK_MASK=all"
 oc process "$(configdir)/openshift-pgsql12-centos8-template.json"  $POSTGRESQL_PARAMS | oc apply -n"$(project)" -f -
}

installPostgresql::description(){
  echo "Installs PostgreSQL Persistent Template"
}